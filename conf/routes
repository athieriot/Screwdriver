# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application pages
GET     /                           controllers.Application.index()
GET     /search                     controllers.Application.search()
GET     /space                      controllers.Application.space()
GET     /about                      controllers.Application.about()

# Security
GET     /connect                    controllers.Authentication.connect()
GET     /authorized                 controllers.Authentication.authorized()
GET     /deconnect                  controllers.Authentication.deconnect()

# Screw API
GET     /screw                      controllers.ScrewResource.list()
POST    /screw                      controllers.ScrewResource.add()
DELETE  /screw                      controllers.ScrewResource.delete()

# Utility API
GET     /authorized                 controllers.Authentication.authorized()
GET     /user                       controllers.DriverResource.user()
GET     /user_repos                 controllers.ProjectResource.userRepos()
GET     /project/search/:term       controllers.ProjectResource.search(term: String)
GET     /driver/search/:term        controllers.DriverResource.search(term: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
